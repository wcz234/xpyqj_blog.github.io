{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.associations": {
    "*.md": "markdown"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.deploy_git": true,
    "**/node_modules": true,
    "**/public": true,
    "**/db.json": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/public": true,
    "**/.deploy_git": true,
    "**/db.json": true
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  }
}
